# Build stage
FROM rust:1.75-bookworm AS builder

WORKDIR /app

# Install dependencies
RUN apt-get update && apt-get install -y \
    cmake \
    libclang-dev \
    librocksdb-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy workspace files
COPY Cargo.toml Cargo.lock ./
COPY crates ./crates
COPY services ./services

# Build release
RUN cargo build --release -p identity-service

# Runtime stage
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    librocksdb7.8 \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy binary
COPY --from=builder /app/target/release/identity-service /app/identity-service

# Create data directory
RUN mkdir -p /data/identity

# Set environment
ENV RUST_LOG=info
ENV STORAGE_PATH=/data/identity

EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/api/v1/identity/health || exit 1

# Run
ENTRYPOINT ["/app/identity-service"]
CMD ["--host", "0.0.0.0", "--port", "8080"]
